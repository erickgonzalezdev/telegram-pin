{
  "name": "telegram-pin",
  "version": "1.0.0",
  "description": "telegram bot",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test:e2e": "export ENVIROMENT=test && mocha --exit --timeout 15000 test/e2e/",
    "test:unit": "export ENVIROMENT=test && mocha --exit --timeout 15000 --recursive test/unit/",
    "test:all": "export ENVIROMENT=test && c8 --reporter=text mocha --exit --timeout 15000 --recursive test/unit",
    "coverage:report": "export ENVIROMENT=test && c8 --reporter=html mocha --exit --timeout 15000 --recursive test/unit/",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i src/ -o docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erickgonzalezdev/telegram-pin.git"
  },
  "author": "erickgonzalezdev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/erickgonzalezdev/telegram-pin/issues"
  },
  "homepage": "https://github.com/erickgonzalezdev/telegram-pin#readme",
  "dependencies": {
    "axios": "^1.7.2",
    "node-telegram-bot-api": "^0.66.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "chai": "^5.1.1",
    "mocha": "^10.4.0",
    "sinon": "^18.0.0",
    "standard": "^17.1.0"
  }
}
